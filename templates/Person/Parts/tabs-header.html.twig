{% block tabsHeader %}
    <!-- Nav tabs -->
    <div>
        <div class="tabsymbols">
            <div class="icontab"><img src="{{ app.request.basepath }}/img/setttings_icon_blue.svg" class="iconimage"></div>
            <div class="icontab"><img src="{{ app.request.basepath }}/img/download_icon_blue.svg" class="iconimage"></div>
        </div>
        <ul class="nav nav-tabs" role="tablist" style="margin-bottom: 1em">
            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">{{ 'Exhibitions'|trans }}</a></li>
            {# co-appearnces #}
            {% if similar|length > 0 %}
                <li role="presentation"><a href="#similar" aria-controls="similar" role="tab" data-toggle="tab">{{ 'Frequent co-appearances'|trans }}</a></li>
            {% endif %}
            {# authority files #}
            {% if person.gnd is not empty or person.ulan is not empty %}
                <li role="presentation"><a href="#authority" aria-controls="authority" role="tab" data-toggle="tab">{{ 'Integrated Authority File'|trans }}</a></li>
            {% endif %}
        </ul>

    </div>

{% endblock %}