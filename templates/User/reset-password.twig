{#
Template for an email message sent to authorize a password reset.
Variables passed to this template:
    user: The User instance.
    resetUrl: The link to click to reset the password.
#}

{# The subject line. #}
{%- block subject -%}{%- autoescape false -%}
    {% trans %}Reset your password{% endtrans %}
{%- endautoescape -%}{%- endblock -%}

{# The plain text message. #}
{%- block body_text -%}{%- autoescape false -%}

{% trans %}Reset your password{% endtrans %}

{% trans %}Click the link below to reset your password:{% endtrans %}


{{ data.resetUrl }}

_______________________________________________________________
{% trans %}Didn't ask to reset your password?{% endtrans %}

{% trans %}If you didn't ask to reset your password, you can safely disregard this email.{% endtrans %}

{%- endautoescape -%}{%- endblock -%}

{# The HTML message. Optional. #}
{%- block body_html -%}

    <h1>{% trans %}Reset your password{% endtrans %}</h1>

    <p>
        {% trans with {'%resetUrl%': data.resetUrl } %}Please <a href="%resetUrl%">click here to reset your password</a>.{% endtrans %}
    </p>

    <hr style="margin-top: 30px;"/>
    <p style="font-size: 13px;">
        <strong>{% trans %}Didn't ask to reset your password?{% endtrans %}</strong>
        <br/>
        {% trans %}If you didn't ask to reset your password, you can safely disregard this email.{% endtrans %}
    </p>

{%- endblock -%}
