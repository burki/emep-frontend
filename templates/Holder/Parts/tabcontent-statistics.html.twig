<div role="tabpanel" class="tab-pane" id="statistics">

    <script src="{{ app.request.basepath }}/vendor/highcharts/highcharts.js"></script>
    <script src="{{ app.request.basepath }}/vendor/highcharts/modules/exporting.js"></script>
    <script src="{{ app.request.basepath }}/vendor/highcharts/modules/heatmap.js"></script>
    <script src="{{ app.request.basepath }}/js/hinclude.js"></script>
    <script src="{{ app.request.basepath }}/js/highchart_custom_theme.js"></script>




    <script type="text/javascript">

        $(document).ready(function() {



            $('#container-exhibtions-city-bar').highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: ' '
                },
                tooltip: {
                    pointFormat: '{point.y} Exhibitions (<b>{point.percentage:.1f}%</b>)'
                },
                plotOptions: {
                    pie: {
                    }
                },
                series: [{
                    name: 'City: ',
                    type: 'pie',
                    innerSize: '50%',
                    data: {{ dataNumberOfItemType[0]|raw }}
                }]
            });


        });

    </script>


    <h3 class="chart-header" data-collapse="container-exhibtions-city-bar"><span class="chartsymbol">+</span>Type of publication<span class="charttypeTitle">(Pie Chart)</span></h3>
    <div class="collapse" id="container-exhibtions-city-bar" style="width: 100%; height: 400px; margin: 0 auto;"></div>


    <script src="{{ app.request.basepath }}/js/collapseChart.js"></script>


</div>