{% block entries %}
    <link rel="stylesheet" href="{{ app.request.basepath }}/vendor/datatables-1.10.16/datatables.min.css">
    <script src="{{ app.request.basepath }}/vendor/datatables-1.10.16/datatables.min.js"></script>
    <style>
        .collapsed {
            display: none;
        }
    </style>
    <script>
        /*
        $( document ).ready(function() {
            $('#entries').DataTable({
                paging: false,
                searching: false,
                info: true,
                "columns": [
                    { "orderSequence": [ "desc", "asc" ] },
                    { "orderSequence": [ "desc", "asc" ] }
                ]
            });
        })
        */

        $(document).ready(function() {
            var groupColumn = 1;
            var table = $('#entrytable').DataTable({
                paging: true,
                searching: false,
                info: true,
            } );



        } );


    </script>



    <div role="tabpanel" class="tab-pane active" id="entries">

        <table id="entrytable" class="table table-striped table-bordered dataTable listviewcontainer" style="width:100%">
            <thead>
            <tr class="listviewheading">
                <th>catalogue</th>
                <th>url</th>
            </tr>
            </thead>
            <tbody>
            {% for row in bibitems %}
                {% set bibitem = row[0] %}
                {{ dump(bibitem) }}
                <tr class="listviewrow">
                    <td class="title">{{ bibitem.renderCitationAsHtml(citeProc, false)|raw }}</td>
                    <td class="normal">{% if row.signature is not empty %}
                            {{ row.signature}}
                        {% endif %}
                        {% if row.url is not empty %}
                            <a href="{{ row.url }}" target="_blank">{{ row.url|prettifyurl }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div><!-- .tab-pane -->
{% endblock %}