{% block entries %}
    {% import 'Shared/helper.html.twig' as helper %}

    {% import 'Shared/datatables.html.twig' as datatables %}
    {{ datatables.head() }}

    <style>
        .collapsed {
            display: none;
        }
    </style>

    <script>
        $(document).ready(function() {
            var groupColumn = 1;
            var table = $('#entrytable').DataTable({
                dom: 'ilrtp',
                paging: true,
                pageLength: 25,
                searching: false,
                info: true,
                columns: [
                    { "orderSequence": [ "asc", "desc" ] },
                    { "orderSequence": [ "desc", "asc" ] },
                    { "orderable": false}
                ]
            });
        } );
    </script>

    <div role="tabpanel" class="tab-pane active" id="entries">

        <table id="entrytable" class="table table-striped table-bordered dataTable listviewcontainer" style="width:100%">
            <thead>
            <tr class="listviewheading">
                <th>Catalogue</th>
                <th>Signature / URL</th>
                <th>Exhibition Date</th>
                <th>Venue</th>
            </tr>
            </thead>

            <tbody>
            {% for row in bibitems %}
                {% set bibitem = row[0] %}
                <tr class="listviewrow">
                    <td id="publication-{{ bibitem.id }}" class="title" data-sort="{{ bibitem.datePublished|date('Y') }}-{{ bibitem.title }}">{{ bibitem.renderCitationAsHtml(citeProc, false)|raw }}</td>
                    <td class="normal">{% if row.signature is not empty %}
                        {{ row.signature}}
                        {% endif %}
                        {% if row.url is not empty %}
                            {{ row.url|converturls }}
                        {% endif %}
                    </td>
                    <td class="normal">
                    {% for exhibitionRef in bibitem.exhibitionRefs if exhibitionRef.role == 1 %}
                        {% set exhibition = exhibitionRef.exhibition %}
                        <a href="{{ path('exhibition', { 'id' : exhibition.id }) }}">{{ helper.exhibition_period(exhibition) }}</a>
                    {% endfor %}
                    </td>
                    <td class="normal">
                    {% for exhibitionRef in bibitem.exhibitionRefs if exhibitionRef.role == 1 %}
                        {% set exhibition = exhibitionRef.exhibition %}
                        {{ helper.location_linked(exhibition.location) }}
                    {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div><!-- .tab-pane -->
{% endblock %}