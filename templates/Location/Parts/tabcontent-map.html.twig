<div role="tabpanel" class="tab-pane mappane" id="map">
    {% import 'Shared/map-leaflet.html.twig' as map %}

    {{ map.head() }}
    {{ map.head_markercluster() }}
    {{ map.head_heatmap() }}

    {% import 'Shared/select2.html.twig' as select2 %}
    {{ select2.head() }}

    {%  set countriesQuery = '' %}
    {%  set locationTypeQuery = 'any' %}
    {%  set stringQuery = 'any' %}

    {% if countries|length %}
        {% set countriesQuery = countries %}
    {% endif %}

    {% if locationType|length %}
        {% set locationTypeQuery = locationType %}
    {% endif %}

    {% if stringPart|length %}
        {% set stringQuery = stringPart %}
    {% endif %}

    {{ render_hinclude(controller('AppBundle\\Controller\\MapController::locationByPlacePart', { entity: 'Venue', countriesQuery: countriesQuery, locationTypeQuery: locationTypeQuery, stringQuery: stringQuery, currIds: ids }), {'default': 'Loading...'}) }}
</div>
