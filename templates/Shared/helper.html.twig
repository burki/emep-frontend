            $('.w-input').keypress(function (e) {
                if (e.which == 13) {
                    $('.indexForm').submit();

                    return false;
                }
            });

            function saveQuery() {
                // change action for saving current query
                $form = $('.indexForm');

                $form.attr('action', '{{ path(saveRoute) }}');
                $form.submit();
            }

            $('.save-query').on('click', function() {
                saveQuery();
            });
        });
{% endmacro %}

