{% extends app.request.attributes.get('_route') == 'exhibition-stats-partial'
    ? 'Base/partial.html.twig'
    : 'Base/base.html.twig'
%}

{% import 'Shared/helper.html.twig' as helper %}

{% block head %}
{% endblock %}

{% block body %}
    <div id="container-age" style="width: 100%; height: auto; margin: 0 auto"></div>
    <div id="container-nationality" style="width: 60%; height: auto; margin: 0 auto;"></div>
    <div id="container-type" style="width: 60%; height: auto; margin: 0 auto;"></div>

    <script src="{{ app.request.basepath }}/vendor/highcharts/highcharts.js"></script>
    <script src="{{ app.request.basepath }}/vendor/highcharts/modules/exporting.js"></script>

    <script type="text/javascript">
    {{ chart|raw }}
    </script>

    {% if app.request.attributes.get('_route') != 'exhibition-stats-partial' %}
    {{ helper.show_detailmodal() }}
    {% endif %}
{% endblock %}