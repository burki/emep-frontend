                    <div class="div-block-5">
                        <div class="first-filter-term">
                            <div>Checkbox Filter</div>
                        </div>
                        <div class="is_equal_to">
                            <div>is</div>
                        </div>
                        <div class="first-filter-term">
                            {# find country to text method #}
                            <div>active</div>
                        </div>
