{% extends 'Base/base.html.twig' %}

{% import 'Shared/helper.html.twig' as helper %}

{% block body %}
    <h1>{{ pageTitle }}</h1>
    <div class="row">
        <div class="col-sm-8">
        {% if exhibitions is not empty %}
        {% set last_year = '' %}
        {% for exhibition in exhibitions %}
            {% set year = exhibition.startyear %}
            {% if year != last_year %}
                {% if last_year != '' %}
            </ul>
                {% endif %}
            <h2>{{ year }} </h2>
                {% set last_year = year %}
            <ul class="list-group">
            {% endif %}
            <li class="list-group-item">
                <a href="{{ path('exhibition', { 'id' : exhibition.id }) }}">
                    <b>{{ exhibition.title }}</b>
                </a>

                {{ helper.exhibition_period(exhibition) }}

                {% if exhibition.location is not null %}
                    {% set location = exhibition.location %}
                    <div>
                    {% if location.place is not null %}
                        <a href="{% if location.place.tgn is not empty %}{{ path('place-by-tgn', { 'tgn' : location.place.tgn }) }}{% else %}{{ path('place', { 'id' : location.place.id }) }}{% endif %}">
                        {{ location.place.nameLocalized }}
                        </a>:
                    {% endif %}
                    <a href="{{ path('location', { 'id' : location.id }) }}">
                        {{ location.name }}</a>
                    </div>
                {% endif %}
            </li>
        {% endfor %}
            </ul>
        {% else %}
            No Exhibitions found
        {% endif %}
        </div>
    </div><!-- .row -->
{% endblock %}
