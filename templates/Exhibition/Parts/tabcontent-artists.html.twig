{% block entries %}
    <link rel="stylesheet" href="{{ app.request.basepath }}/vendor/datatables-1.10.16/datatables.min.css">
    <script src="{{ app.request.basepath }}/vendor/datatables-1.10.16/datatables.min.js"></script>
    <script>
        $( document ).ready(function() {
            $('#artisttable').DataTable({
                "dom": 'ilrtp',
                paging: true,
                searching: false,
                info: true,
                "columns": [
                    { "orderSequence": [ "desc", "asc" ] },
                    { "orderSequence": [ "desc", "asc" ] },
                    { "orderSequence": [ "desc", "asc" ] }
                ]
            });
        })
    </script>


    <div role="tabpanel" class="tab-pane" id="artists">
        {#
          {{ helper.exhibition_itemexhibition_sort_control(exhibition) }}
        #}


        <table id="artisttable" class="table table-striped table-bordered dataTable listviewcontainer" style="width:100%">
            <thead>
                <tr class="listviewheading">
                    <th>Name</th>
                    <th>Birth Date</th>
                    <th>Death Date</th>
                </tr>
            </thead>
            <tbody>

            {% for person in artists %}
                <tr class="listviewrow">
                    <td class="title">
                        <a href="{{ path('person', { 'id' : person.id }) }}">{{ person.fullname(true) }}</a>
                    </td>

                    <td class="date">
                        {{ person.birthDate|dateincomplete -}}
                    </td>

                    <td class="date">
                        {{ person.deathDate|dateincomplete -}}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div><!-- .tab-pane -->
{% endblock %}