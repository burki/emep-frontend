{% extends 'Base/base.html.twig' %}

{% import 'Shared/helper.html.twig' as helper %}

{% block head %}
    {% import 'Shared/select2.html.twig' as select2 %}
    {{ select2.head() }}

    <script>
    $(document).ready(function($) {
        // Remove empty fields from GET forms
        // Author: Bill Erickson
        // URL: http://www.billerickson.net/code/hide-empty-fields-get-form/

        // Change 'form' to class or ID of your specific form
        $('form').submit(function() {
            $(this).find(':input').filter(function() { return !this.value; }).attr('disabled', 'disabled');

            return true; // ensure form still submits
        });

        // Un-disable form fields when page loads, in case they click back after submission
        $('form').find(':input').prop('disabled', false );

        // initialize select2
        $('.select2').select2();
    });

    function saveQuery() {
        // change action for saving current query
        $form = $('#search');

        $form.attr('action', '{{ path('search-save') }}');
        $form.submit();
    }
    </script>

    <!-- most come after generic $('.select2').select2(); call above -->
    <script src="{{ asset('js/select2entity.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="w-container">
        <h1 class="heading">{{ pageTitle }}</h1>

            <form id="search" class="" action="{{ path(app.request.get('_route')) }}" method="GET">
                <input type="hidden" name="entity" value="{{ listBuilder.entity }}" />
                {% set filter = listBuilder.queryFilters %}

                <div class="searchbarcontainer" style="max-width: 850px">

                    <div class="searchbarinputcontainer">
                        <input class="text-field-class w-input search-input input-text-search" type="text" name="filter[search]" value="{{ filter.search }}" placeholder="search" />
                    </div>
                    {# {{ form_widget(form.submit) }} #}
                    <div class="searchbuttoncontainer">
                        <button type="submit" id="filter_submit" name="filter[submit]" class="submit-button w-button submit-filter-visible">Search</button>
                    </div>
                </div>

                {% block filters %}
                    <div class="filters-heading" style="margin-top: 25px;">
                        <span style="margin-right: 20px; margin-top: 7px">Filter by:</span>

                        <button type="button" class="btn" data-toggle="collapse" data-target="#filter-panel-catentry">
                            <span class="glyphicon glyphicon-cog"></span> Cat. Entry
                        </button>

                        <button type="button" class="btn" data-toggle="collapse" data-target="#filter-panel-exhibition">
                            <span class="glyphicon glyphicon-cog"></span> Exhibition
                        </button>

                        <button type="button" class="btn" data-toggle="collapse" data-target="#filter-panel-venue">
                            <span class="glyphicon glyphicon-cog"></span> Venue
                        </button>

                        <button type="button" class="btn" data-toggle="collapse" data-target="#filter-panel-organizer">
                            <span class="glyphicon glyphicon-cog"></span> Organizing Body
                        </button>

                        <button type="button" class="btn" data-toggle="collapse" data-target="#filter-panel-person">
                            <span class="glyphicon glyphicon-cog"></span> Artist
                        </button>
                    </div>

                <div class="filter-combination-container">

                {% form_theme form 'Search/bootstrap_3_adjusted.html.twig' %}
                <div id="filter-panel-catentry" class="collapse filter-panel">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filter by Catalogue Entry</div>
                        <div class="panel-body">
                            {{ form_row(form.catentry.type) }}
                            {{ form_row(form.catentry.forsale) }}
                            {{ form_row(form.catentry.price_available) }}
                        </div>
                    </div>
                </div>
                <div id="filter-panel-exhibition" class="collapse filter-panel">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filter by Exhibition</div>
                        <div class="panel-body">
                            {{ form_row(form.exhibition.date) }}
                            {{ form_row(form.exhibition.type) }}
                            {{ form_row(form.exhibition.organizer_type) }}
                            {{ form_row(form.exhibition.exhibition) }}
                        </div>
                    </div>
                </div>
                <div id="filter-panel-venue" class="collapse filter-panel">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filter by Venue</div>
                        <div class="panel-body">
                            {{ form_row(form.location.geoname) }}
                            {{ form_row(form.location.type) }}
                            {{ form_row(form.location.location) }}
                        </div>
                    </div>
                </div>
                <div id="filter-panel-organizer" class="collapse filter-panel">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filter by Organizing Body</div>
                        <div class="panel-body">
                            {#{ form_row(form.organizer.geoname) }#}
                            {{ form_row(form.organizer.type) }}
                            {{ form_row(form.organizer.organizer) }}
                        </div>
                    </div>
                </div>
                <div id="filter-panel-person" class="collapse filter-panel">
                    <div class="panel panel-default">
                        <div class="panel-heading">Filter by Artist</div>
                        <div class="panel-body">
                            {{ form_row(form.person.gender) }}
                            {{ form_row(form.person.nationality) }}
                            {{ form_row(form.person.birthdate) }}
                            {{ form_row(form.person.deathdate) }}
                            {{ form_row(form.person.person) }}
                        </div>
                    </div>
                </div>


                </div>
                {% endblock %}
            </form>
    </div><!-- .w-container -->

    <div class="contentcontainer w-container">
        <div class="listviewrow">

        {% set entities =
                {
                    'ItemExhibition' : 'Catalogue Entries',
                    'Exhibition' : 'Exhibitions',
                    'Venue' : 'Venues',
                    'Organizer' : 'Organizing Bodies',
                    'Person' : 'Artists',
                }
        %}
        <div>
            <div class="tabsymbols">
                {% if 'search-map' == app.request.get('_route') %}
                    <div class="advanced-search-settings"><a href="{{ path('search', app.request.query.all) }}"><span class="checkbox-filter-button">Show List</a></span></a></div>
                {% elseif 'Exhibition' == listBuilder.entity or 'Venue' == listBuilder.entity or 'Person' == listBuilder.entity  %}
                    <div class="advanced-search-settings"><a href="{{ path('search-map', app.request.query.all) }}"><span class="checkbox-filter-button">Show Map</span></a></div>
                {% endif %}
                <div class="icontab download-csv"><a title="Download as Excel-File" href="{{ path('search-export', app.request.query.all) }}"><img src="{{ app.request.basepath }}/img/download_icon_blue.svg" class="iconimage"></a></div>

                {% if app.user  %}

                    <form action="{{ path(app.request.get('_route'), { 'entity' : entity }) }}" method="POST" style="margin-left: 10px">
                        {% if searches is not empty %}
                            <select name="useraction" id="saved-searches" class="w-input select-queries" onchange="this.form.submit()">
                                <option value="" >- Select Saved Query -</option>
                                {% for id, label in searches %}
                                    <option value="{{ id }}">{{ label }}</option>
                                {% endfor %}
                            </select>
                        {% endif %}
                    </form>
                    <div class="icontab save-query" onclick="saveQuery()"><img src="{{ app.request.basepath }}/img/save_icon.svg" class="iconimage" title="save your current query"></div>


                {% endif %}

            </div><!-- .tabsymbols -->


            <ul class="nav nav-tabs" role="tablist" >
                {% for entity, label in entities %}
                    {% set active = entity == listBuilder.entity %}
                    {% if active %}
                        {% set params = { 'entity' : entity } %}
                    {% else %}
                        {# so we keep active filters #}
                        {% set params = app.request.query.all | merge({ 'entity' : entity, 'page' : 1 }) %}
                    {% endif %}
                    <li role="presentation" class="{% if active %}active {% endif %}entries-tab" ><a href="{{ path(app.request.get('_route'), params) }}" aria-controls="entries">{{ label|trans }}</a></li>
                    <a {% if active %} style="font-weight: bold"{% endif %} href=""></a>
                {% endfor %}
            </ul>

        </div>


        <div class="listviewrow">
        {% block content %}
            {% if pager.currentPageResults is not empty %}
            <div style="width: 100%; text-align: right;">
            <div class="count">
                {{ pager.currentPageOffsetStart }} - {{ pager.currentPageOffsetEnd }} of {{ pager.getNbResults() }}
            </div>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        {% for key, label in listBuilder.buildHeaderRow() %}
                        <th>
                            {% set sortInfo = listBuilder.sortInfo(key) %}
                            {% if sortInfo is not empty %}
                                <a href="{{ sortInfo.action }}"{% if sortInfo.active is not empty %} class="{{ sortInfo.active }}"{% endif %}>{{ label }}</a>
                            {% else %}
                                {{ label }}
                            {% endif %}
                        </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody>
                    {% for row in pager.currentPageResults %}
                    <tr>
                        {% set rowValues = listBuilder.buildRow(row, 'html') %}
                        {% for val in rowValues %}
                        <td>{{ val|raw }}</td>
                        {% endfor %}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="pagerfanta">{{ pagerfanta(pager, 'twitter_bootstrap3', { 'omitFirstPage': true }) }}</div>
            {% else %}
                No matching entry. Please adjust your search.
            {% endif %}
        {% endblock %}
        </div>
        </div>
    </div>
{% endblock %}
