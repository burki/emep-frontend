{% extends 'Base/base.html.twig' %}

{% import 'Shared/helper.html.twig' as helper %}

{% block head %}
    {% import 'Shared/select2.html.twig' as select2 %}
    {{ select2.head() }}

    <script src="{{ app.request.basepath }}/js/js.cookie.js"></script>

    <script>
        $(document).ready(function($) {
            // Remove empty fields from GET forms
            // Author: Bill Erickson
            // URL: http://www.billerickson.net/code/hide-empty-fields-get-form/

            // Change 'form' to class or ID of your specific form
            $('form').submit(function() {
                $(this).find(':input').filter(function() { return !this.value; }).attr('disabled', 'disabled');

                return true; // ensure form still submits
            });

            // Un-disable form fields when page loads, in case they click back after submission
            $('form').find(':input').prop('disabled', false );

            // initialize select2
            $('.select2').select2();

            {{ helper.checkmark_actions(listBuilder.entity) }}
            {{ helper.indexform_actions('search-save') }} // needs to be changed
        });
    </script>

    <!-- most come after generic $('.select2').select2(); call above -->
    <script src="{{ asset('js/select2entity.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="w-container">
        <h1 class="heading">{{ pageTitle }}</h1>

        {% if entityName|lower == 'exhibition' %}
            {% embed "Search/Entity/exhibition-filter.html.twig" %}
            {% endembed %}
        {% endif %}

        {% if entityName|lower == 'venue' %}
            {% embed "Search/Entity/venue-filter.html.twig" %}
            {% endembed %}
        {% endif %}

        {% if entityName|lower == 'organizer' %}
            {% embed "Search/Entity/organizer-filter.html.twig" %}
            {% endembed %}
        {% endif %}

        {% if entityName|lower == 'person' %}
            {% embed "Search/Entity/person-filter.html.twig" %}
            {% endembed %}
        {% endif %}


    </div><!-- .w-container -->

    <div class="contentcontainer w-container">
        <div class="listviewrow">

            {% set entities =
                {
                    'Exhibition' : 'Exhibitions',
                    'Person' : 'Artists',
                    'ItemExhibition' : 'Catalogue Entries',
                    'Venue' : 'Venues',
                    'Organizer' : 'Organizing Bodies',
                }
            %}
            <div>
                <div class="tabsymbols">

                    {% if 'ItemExhibition' != listBuilder.entity %}<div class="advanced-search-settings"><span class="checkbox-filter-button">apply checkbox filter</span></div>{% endif %}
                    <div class="icontab download-csv"><a title="Download as Excel-File" href="{{ path('search-export', app.request.query.all) }}"><img src="{{ app.request.basepath }}/img/download_icon_blue.svg" class="iconimage"></a></div>

                    {% if app.user  %}
                        <form action="{{ path(app.request.get('_route'), { 'entity' : entity }) }}" method="POST" style="margin-left: 10px">
                            {% if searches is not empty %}
                                <select name="useraction" id="saved-searches" class="w-input select-queries" onchange="this.form.submit()">
                                    <option value="">- Select Saved Query -</option>
                                    {% for id, label in searches %}
                                        <option value="{{ id }}">{{ label }}</option>
                                    {% endfor %}
                                </select>
                            {% endif %}
                        </form>
                        <div class="icontab save-query" onclick="saveQuery()"><img src="{{ app.request.basepath }}/img/save_icon.svg" class="iconimage" title="save your current query"></div>
                    {% endif %}
                </div><!-- .tabsymbols -->

                <ul class="nav nav-tabs" role="tablist" >
                    {% set active = entity == listBuilder.entity %}
                    {% for entity, label in entities %}
                        {% if entity|lower ==  entityName|lower %}
                            {% if active %}
                                {% set params = { 'entity' : entity } %}
                            {% else %}
                                {# so we keep active filters #}
                                {% set params = app.request.query.all | merge({ 'entity' : entity, 'page' : 1 }) %}
                            {% endif %}
                            <li role="presentation" class="{% if type != 'map' and type != 'stats' %}active {% endif %}entries-tab" ><a href="{{ path("#{entityName|lower}", app.request.query.all) }}" aria-controls="entries">{{ label|trans }}</a></li>
                            <a {% if active %} style="font-weight: bold"{% endif %} href=""></a>
                        {% endif %}
                    {% endfor %}


                    <li role="presentation" class="{% if type == 'map' %}active {% endif %}entries-tab" ><a href="{{ path( "#{entityName|lower}-map", app.request.query.all) }}" aria-controls="entries">{{ 'Map'|trans }}</a></li>
                    <li role="presentation" class="{% if type == 'stats' %}active {% endif %}entries-tab" ><a href="{{ path( "#{entityName|lower}-stats", app.request.query.all) }}" aria-controls="entries">{{ 'Statistics'|trans }}</a></li>


                </ul>
            </div>

            {% block content %}
                {% embed "Search/Entity/list.html.twig" %}
                {% endembed %}
            {% endblock %}

        </div>
    </div>
{% endblock %}
