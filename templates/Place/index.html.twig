{% extends 'Base/base.html.twig' %}

{% block body %}
    <h1>{{ 'Places' | trans }}</h1>
    <div class="row">
        <div class="col-sm-12">
        {% if places is not empty %}
        {% set last_initial = '' %}
        {% for place in places %}
            {% set initial = slugify.slugify(place.nameLocalized(app.request.locale)|first)|upper %}
            {% if initial != last_initial %}
                {% if last_initial != '' %}
            </ul>
                {% endif %}
            <h2>{{ initial }} </h2>
            {% set last_initial = initial %}
            <ul class="list-group">
            {% endif %}
            <li class="list-group-item">
                <a href="{% if false and place.tgn is not empty %}{{ path('place-by-tgn', { 'tgn' : place.tgn }) }}{% else %}{{ path('place', { 'id' : place.id }) }}{% endif %}">
                    {{ place.nameLocalized(app.request.locale) }}
                </a>
                {#% if place.children|length > 0 %}
                    <ul>
                        {% for child in place.children %}
                        <li><a href="{% if child.tgn is not empty %}{{ path('place-by-tgn', { 'tgn' : child.tgn }) }}{% else %}{{ path('place', { 'id' : child.id }) }}{% endif %}">
                            {{ child.name }}
                        </a></li>
                        {% endfor %}
                    </ul>
                {% endif %#}
            </li>
        {% endfor %}
        </ul>
        {% else %}
            No places found
        {% endif %}
        </div>
    </div><!-- .row -->
{% endblock %}
