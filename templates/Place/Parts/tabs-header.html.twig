{% block tabsHeader %}
    <!-- Nav tabs -->
    <div>
        <div class="tabsymbols">
            <div class="icontab"><img src="{{ app.request.basepath }}/img/setttings_icon_blue.svg" class="iconimage"></div>
            <div class="icontab"><img src="{{ app.request.basepath }}/img/download_icon_blue.svg" class="iconimage"></div>
        </div>
        <ul class="nav nav-tabs" role="tablist" style="margin-bottom: 1em">
            {# co-appearnces #}
            {% if persons|length > 0 %}
                <li role="presentation"><a href="#artists" aria-controls="similar" role="tab" data-toggle="tab">{{ 'Artists'|trans }}</a></li>
            {% endif %}
            {# authority files #}
            {% if venues|length > 0 %}
                <li role="presentation"><a href="#venues" aria-controls="authority" role="tab" data-toggle="tab">{{ 'Venues'|trans }}</a></li>
            {% endif %}
        </ul>

    </div>

{% endblock %}